
<h1 class="fs-3"> <%= @place["name"] %></h1>
  <h1 class="fs-5 fw-light">My Posts</h1>

  <div class="row">
    <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h3 class="fs-4" > <%= post["title"] %></h3>
      <h4 class="fs-6 fw-light" ><%= post["posted_on"] %></h4>
      <p class="fs-5" ><%= post["description"] %></p>
  </div>
<% end %>
</div>
</div>

<div class="container mt-1 p-1">
<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>
<p>
  <a class="btn btn-info" href="/places">Back to All Places</a>
</p>
</div>